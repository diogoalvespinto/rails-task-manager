<h1>Edit task</h1>
<%= form_with model: @task do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :details %>
  <%= form.text_field :details %>
  <%= form.label :completed %>
  <%= form.check_box :completed %>
  <%= form.submit %>
<% end %>

<%= link_to "Back to list", tasks_path %>
