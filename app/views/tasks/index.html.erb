<h1>My tasks</h1>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li>
      <h3>
      <% if task.completed %>
      <i class="fa-regular fa-square-check"></i>
      <% else %>
      <i class="fa-regular fa-square"></i>
      <% end %>
        <%= link_to task.title, task_path(task) %>
      </h3>
      <p><%= task.details %></p>
    </li>
  <% end %>
</ul>

<%= link_to "Create new task", new_task_path %>
